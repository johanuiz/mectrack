# MecTrack Production Environment Configuration
# IMPORTANTE: Cambiar estas credenciales en producción

# Puerto del servidor
PORT=3000

# Ruta de la base de datos
DB_PATH=./database/mectrack.db

# Clave secreta para JWT (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET=mectrack_production_secret_key_2024_change_this_immediately

# Entorno de producción
NODE_ENV=production

# Credenciales de administrador (CAMBIAR EN PRODUCCIÓN)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Host binding
HOST=0.0.0.0

# Configuraciones adicionales para producción
SESSION_SECRET=mectrack_session_secret_2024_change_this
BCRYPT_ROUNDS=12

# Configuración de base de datos
DB_TIMEOUT=30000
DB_CONNECTION_LIMIT=10

# Configuración de seguridad
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/mectrack.log
